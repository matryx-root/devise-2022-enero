<p id="notice"><%= notice %></p>
<div class="container">
<h1>Terrains</h1>
<% if user_signed_in? %>
<%= link_to 'New Terrain', new_terrain_path %>
<% end %>
</div>

<div class="container">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Value</th>

      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @terrains.each do |terrain| %>
      <tr>
        <td><%= terrain.title %></td>
        <td><%= terrain.description %></td>
        <td><%= terrain.value %></td>

        <td><%= link_to '   Show   ', terrain %></td>
        <% if user_signed_in? %>


        <td><%= link_to '   Edit    ', edit_terrain_path(terrain) %></td>

        <td><%= link_to '  Destroy  ', terrain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Terrain', new_terrain_path %>
<% end %>
</div>
